<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.eci.cvds.persistence.mybatis.mappers.OfferMapper">
    <!-- GET USER BY USERNAME -->
    <select id="getOfferByName" resultMap="OfferResult">
        SELECT
        offerId AS o_idOffer,
        offerCategory AS o_category,
        name AS o_name,
        description AS o_description,
        status AS o_status,
        dateCreation AS o_dateCreation,
        dateModification AS o_dateModification
        FROM Offer
        WHERE #{name} = name;
    </select>

    <!-- GET USER BY EMAIL -->
    <select id="getOfferByID" resultMap="OfferMapper">
        SELECT
        offerId AS o_idOffer,
        offerCategory AS o_category,
        name AS o_name,
        description AS o_description,
        status AS o_status,
        dateCreation AS o_dateCreation,
        dateModification AS o_dateModification
        FROM Offer
        WHERE #{idOffer} = id;
    </select>


    <resultMap id="OfferResult" type="Offer" >
        <id property="idOffer" column="idOffer"/>
        <result property="name" column="name" />
        <result property="description" column="description" />
        <result property="status" column="status" />
        <result property="dateCreation" column="dateCreation" />
        <result property="dateModification" column="dateModification" />
        <association property="category" javaType="Category" columnPrefix="category" resultMap="-category-"/>
    </resultMap>
</mapper>
